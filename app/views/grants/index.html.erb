<div class="page-header">
  <h1>
    Grants
    <a href="/grants/new" class="btn btn-lg btn-success">New Grant</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "grants_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :amount, "Amount" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :amount_gteq, :class => "form-control", :placeholder => "Amount greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :amount_lteq, :class => "form-control", :placeholder => "Amount less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :date_approved, "Date approved" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='date_approvedgteqPicker'>
                  <%= f.text_field :date_approved_gteq, :class => "form-control", :placeholder => "Date approved greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='date_approvedlteqPicker'>
                  <%= f.text_field :date_approved_lteq, :class => "form-control", :placeholder => "Date approved less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#date_approvedgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#date_approvedlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#date_approvedgteqPicker').on("dp.change", function (e) {
                  $('#date_approvedlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#date_approvedlteqPicker').on("dp.change", function (e) {
                  $('#date_approvedgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :fiscal_year_cont, "Fiscal year contains" %>
    <%= f.text_field :fiscal_year_cont, :class => "form-control", :placeholder => "Fiscal year contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :organization_org_name_cont, "Organization org_name contains" %>
      <%= f.text_field :organization_org_name_cont, :class => "form-control", :placeholder => "Organization org_name contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Check Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='checksgteqcreated_atPicker'>
                  <%= f.text_field :checks_created_at_gteq, :class => "form-control", :placeholder => "Check Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='checkslteqcreated_atPicker'>
                  <%= f.text_field :checks_created_at_lteq, :class => "form-control", :placeholder => "Check Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#checksgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#checkslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#checksgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#checkslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#checkslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#checksgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :thank_you_letters_letter_image_cont, "ThankYouLetter letter_image contains" %>
      <%= f.text_field :thank_you_letters_letter_image_cont, :class => "form-control", :placeholder => "ThankYouLetter letter_image contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/grants" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#grants_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Amount</th>
        <th>Fiscal year</th>
        <th>Date approved</th>
        <th>Organization</th>
        <th>Actions</th>
      </tr>

      <% @grants.each do |grant| %>
      <tr>
        <td><%= grant.amount %></td>
        <td><%= grant.fiscal_year %></td>
        <td><%= grant.date_approved %></td>
        <td>
          <% if grant.organization.present? %>
            <a href="/organizations/<%= grant.organization.id %>">
              <%= grant.organization.org_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/grants/<%= grant.id %>" class="btn btn-primary">Show</a>
          <a href="/grants/<%= grant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_grant/<%= grant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @grants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
