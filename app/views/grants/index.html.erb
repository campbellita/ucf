<div class="page-header">
  <h1>
    Grants
    <a href="/grants/new" class="btn btn-lg btn-success">New Grant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Amount</th>
        <th>Fiscal year</th>
        <th>Date approved</th>
        <th>Organization</th>
        <th>Actions</th>
      </tr>

      <% @grants.each do |grant| %>
      <tr>
        <td><%= grant.amount %></td>
        <td><%= grant.fiscal_year %></td>
        <td><%= grant.date_approved %></td>
        <td>
          <% if grant.organization.present? %>
            <a href="/organizations/<%= grant.organization.id %>">
              <%= grant.organization.org_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/grants/<%= grant.id %>" class="btn btn-primary">Show</a>
          <a href="/grants/<%= grant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_grant/<%= grant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @grants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
