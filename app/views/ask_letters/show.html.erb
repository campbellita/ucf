<div class="page-header">
  <h3>Ask Letter #<%= @ask_letter.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Letter image</dt>
      <dd><img src="<%= @ask_letter.letter_image %>" class="img-responsive"></dd>

      <dt>Date</dt>
      <dd><%= @ask_letter.date %></dd>

      <dt>Organization</dt>
      <dd>
        <% if @ask_letter.organization.present? %>
          <a href="/organizations/<%= @ask_letter.organization_id %>">
            <%= @ask_letter.organization.org_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ask_letters" class="btn btn-primary">
        Back
      </a>
      <a href="/ask_letters/<%= @ask_letter.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_ask_letter/<%= @ask_letter.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
