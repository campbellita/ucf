<div class="page-header">
  <h1>
    Ask letters
    <a href="/ask_letters/new" class="btn btn-lg btn-success">New Ask letter</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Letter image</th>
        <th>Date</th>
        <th>Organization</th>
        <th>Actions</th>
      </tr>

      <% @ask_letters.each do |ask_letter| %>
      <tr>
        <td><%= ask_letter.letter_image %></td>
        <td><%= ask_letter.date %></td>
        <td><%= ask_letter.organization_id %></td>
        <td>
          <a href="/ask_letters/<%= ask_letter.id %>" class="btn btn-primary">Show</a>
          <a href="/ask_letters/<%= ask_letter.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ask_letter/<%= ask_letter.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
